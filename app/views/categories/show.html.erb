<%= link_to "back", categories_path %>

<h1>Category: <%= @category.name %></h1>
<p>Bookmarks</p>
<%= link_to "Add Bookmark", new_category_bookmark_path(@category, @bookark) %>


<ol>
  <% @category.bookmarks.each do |bookmark| %>
  <li>
    <%= bookmark.comment %>
    <%= bookmark.recipe.name %>
    <%= link_to "delete" , bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    <p>
      <%= bookmark.recipe.description %>
      <%= bookmark.recipe.rating %>
    </p>
  </li>
  <% end %>
</ol>
